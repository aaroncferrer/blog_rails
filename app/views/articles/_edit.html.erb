<%= form_with model: @article, url: update_article_path(@article), local: true do |f| %>
    <p>
        <%= f.label :name, class: 'edit_form_label' %><br>
        <%= f.text_field :name, class: "edit_form_input" %><br>
    </p>

    <p>
        <%= f.label :body, class: 'edit_form_label' %><br>
        <%= f.text_area :body, class: "edit_form_textarea" %><br>
    </p>

    <p>
        <%= f.label :preview, class: 'edit_form_label' %><br>
        <%= f.text_area :preview, class: "edit_form_textarea" %><br>
    </p>

    <p>
        <%= f.submit 'Submit', class: 'btns btn-primary' %>
    </p>
<% end %>
